{
  "name": "carafe",
  "version": "0.4.0",
  "description": "Crazy simple dependency container",
  "module": "src/index.mjs",
  "main": "dist/index.js",
  "scripts": {
    "lint": "eslint \"*.{mjs,js}\" \"src/**/*.{mjs,js}\"",
    "report-coverage": "nyc report --reporter=lcov > coverage.lcov && codecov",
    "version": "npm-auto-version",
    "pretest": "npm run build",
    "test": "npm run lint && npm run test:only",
    "test:only": "nyc node test/index.js",
    "build": "modconv src -d dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/w33ble/carafe.git"
  },
  "keywords": [
    "dependency",
    "dependency injection",
    "di",
    "inversion of control",
    "ioc",
    "ioc container"
  ],
  "files": [
    "src/",
    "dist/",
    "AUTHORS.md",
    "CHANGELOG.md",
    "LICENSE"
  ],
  "author": "Joe Fleming (https://github.com/w33ble)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/w33ble/carafe/issues"
  },
  "homepage": "https://github.com/w33ble/carafe",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run test"
    }
  },
  "lint-staged": {
    "ignore": [
      "package.json"
    ],
    "linters": {
      "*.{js,mjs}": [
        "eslint --fix"
      ],
      "*.{js,mjs,json,css}": [
        "prettier --write"
      ]
    }
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "nyc": {
    "extension": [
      ".mjs"
    ]
  },
  "devDependencies": {
    "@w33ble/npm-auto-tools": "*",
    "codecov": "^3.0.0",
    "eslint": "^4.9.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-prettier": "^2.3.1",
    "eslint-plugin-react": "^7.1.0",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.4",
    "modconv": "^0.1.2",
    "nyc": "^13.3.0",
    "prettier": "^1.9.0",
    "tapped": "^0.1.0"
  }
}
