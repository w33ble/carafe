{
  "name": "carafe",
  "version": "0.3.0",
  "description": "Crazy simple dependency container",
  "module": "index.mjs",
  "scripts": {
    "lint": "eslint \"*.{mjs,js}\" \"src/**/*.{mjs,js}\"",
    "report-coverage": "nyc report --reporter=lcov > coverage.lcov && codecov",
    "version": "auto-changelog -p && git add CHANGELOG.md",
    "test": "npm run lint && npm run test:only",
    "test:only": "nyc --require esm node test/index.mjs",
    "precommit": "lint-staged",
    "prepush": "npm run test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/w33ble/carafe.git"
  },
  "keywords": [
    "dependency",
    "dependency injection",
    "di",
    "inversion of control",
    "ioc",
    "ioc container"
  ],
  "files": [
    "src/",
    "index.js",
    "index.mjs"
  ],
  "author": "Joe Fleming (https://github.com/w33ble)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/w33ble/carafe/issues"
  },
  "homepage": "https://github.com/w33ble/carafe",
  "lint-staged": {
    "*.{mjs,js}": ["eslint --fix"],
    "*.{mjs,js,json,css}": ["prettier --write"]
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "esm": {
    "cjs": true
  },
  "nyc": {
    "extension": [
      ".mjs"
    ]
  },
  "auto-changelog": {
    "output": "CHANGELOG.md",
    "template": ".changelog_template.hbs",
    "ignoreCommitPattern": "(chore|test):",
    "commitLimit": false
  },
  "dependencies": {
    "esm": "^3.0.17"
  },
  "devDependencies": {
    "auto-changelog": "^1.4.6",
    "codecov": "^3.0.0",
    "eslint": "^4.9.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-prettier": "^2.3.1",
    "eslint-plugin-react": "^7.1.0",
    "husky": "^0.14.3",
    "lint-staged": "^7.0.4",
    "nyc": "^11.6.0",
    "prettier": "^1.9.0",
    "tape": "^4.9.0"
  }
}
